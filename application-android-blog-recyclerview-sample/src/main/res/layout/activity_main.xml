<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="34dp"
            android:text="基础 RecyclerView 示例"
            android:textColor="@color/purple_500"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_shape_setting_item_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_normal_linear_layout_vertical_text_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_common_arrow_right"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:text="线性布局（垂直） - 文本类型"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_normal_linear_layout_vertical_image_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_common_arrow_right"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:text="线性布局（垂直） - 图片类型"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_normal_linear_layout_vertical_multi_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_common_arrow_right"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:text="线性布局（垂直） - 多类型"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>